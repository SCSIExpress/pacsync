<?xml version="1.0"?>
<Container version="2">
  <Name>pacman-sync-dev</Name>
  <Repository>ghcr.io/scsiexpress/pacman-sync-server:dev</Repository>
  <Registry>https://ghcr.io/</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/SCSIExpress/pacsync</Support>
  <Project>https://github.com/SCSIExpress/pacsync</Project>
  <Overview>Pacman Sync Utility Development Container - A tool for synchronizing Arch Linux package states with hot reload for development.</Overview>
  <Category>Tools:</Category>
  <WebUI>http://[IP]:[PORT:4444]</WebUI>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/your-repo/pacman-sync-utility/main/docs/icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="HTTP Port" Target="4444" Default="4444" Mode="tcp" Description="HTTP port for the web interface" Type="Port" Display="always" Required="true" Mask="false">4444</Config>
  <Config Name="Database Type" Target="DATABASE_TYPE" Default="internal" Mode="" Description="Database type (internal or postgresql)" Type="Variable" Display="always" Required="false" Mask="false">internal</Config>
  <Config Name="Database URL" Target="DATABASE_URL" Default="" Mode="" Description="Database connection URL (leave empty for internal database)" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="HTTP Port (Env)" Target="HTTP_PORT" Default="4444" Mode="" Description="HTTP port environment variable" Type="Variable" Display="advanced" Required="false" Mask="false">4444</Config>
  <Config Name="HTTP Host" Target="HTTP_HOST" Default="0.0.0.0" Mode="" Description="HTTP host binding" Type="Variable" Display="advanced" Required="false" Mask="false">0.0.0.0</Config>
  <Config Name="Log Level" Target="LOG_LEVEL" Default="DEBUG" Mode="" Description="Logging level (DEBUG, INFO, WARNING, ERROR)" Type="Variable" Display="always" Required="false" Mask="false">DEBUG</Config>
  <Config Name="Environment" Target="ENVIRONMENT" Default="development" Mode="" Description="Application environment" Type="Variable" Display="advanced" Required="false" Mask="false">development</Config>
  <Config Name="JWT Secret Key" Target="JWT_SECRET_KEY" Default="dev-secret-key" Mode="" Description="JWT secret key for authentication" Type="Variable" Display="always" Required="false" Mask="true">dev-secret-key</Config>
  <Config Name="Data Volume" Target="/app/data" Default="/mnt/cache/appdata/pacsync/data" Mode="rw" Description="Application data storage" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/pacman-sync-dev/data</Config>
  <Config Name="Logs Volume" Target="/app/logs" Default="/mnt/cache/appdata/pacsync/logs" Mode="rw" Description="Application logs storage" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/pacman-sync-dev/logs</Config>
  <Config Name="Config Volume" Target="/app/config" Default="/cache/user/appdata/pacsync/config" Mode="rw" Description="Application configuration storage" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/pacman-sync-dev/config</Config>

</Container>