# Pacman Sync Utility - Environment Configuration Template
# Copy this file to .env and customize the values for your deployment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database type: 'internal' for SQLite or 'postgresql' for external PostgreSQL
DATABASE_TYPE=internal

# PostgreSQL connection URL (only required when DATABASE_TYPE=postgresql)
# Format: postgresql://username:password@host:port/database
# DATABASE_URL=postgresql://pacman_sync:changeme@postgres:5432/pacman_sync

# PostgreSQL connection details (alternative to DATABASE_URL)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=pacman_sync
POSTGRES_USER=pacman_sync
POSTGRES_PASSWORD=changeme

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# HTTP server settings
HTTP_PORT=8080
HTTP_HOST=0.0.0.0

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Environment: development, staging, production
ENVIRONMENT=production

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT secret key for token signing (CHANGE THIS IN PRODUCTION!)
JWT_SECRET_KEY=your-very-secure-secret-key-change-this-in-production

# API rate limiting (requests per minute per IP)
API_RATE_LIMIT=100

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable automatic repository compatibility analysis
ENABLE_REPOSITORY_ANALYSIS=true

# Automatically clean up old package state snapshots
AUTO_CLEANUP_OLD_STATES=true

# Maximum number of state snapshots to keep per pool
MAX_STATE_SNAPSHOTS=10

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Number of worker processes for production deployment
GUNICORN_WORKERS=4

# Database connection pool settings (PostgreSQL only)
DB_POOL_MIN_SIZE=1
DB_POOL_MAX_SIZE=10

# Request timeout in seconds
REQUEST_TIMEOUT=60

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Enable structured logging in JSON format
STRUCTURED_LOGGING=false

# Log file rotation settings
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (development only)
DEBUG=false

# Enable auto-reload on code changes (development only)
AUTO_RELOAD=false

# CORS allowed origins (comma-separated, use * for all in development)
CORS_ORIGINS=*